  body

    .container

      // Static navbar
      .navbar.navbar-default(role="navigation")
        .navbar-header
          button.navbar-toggle(type="button",data-toggle="collapse",data-target=".navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") javascript-minifier.com
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href="/examples") Examples
            li
              a(href="/blog/") Blog
          ul.nav.navbar-nav.navbar-right
            li
              p.navbar-text Our other services:
            li
              a(href="http://cssminifier.com/") CSS Minifier
            li
              a(href="http://img-resize.com/") Image Resize
            li
              a(href="http://pngcrush.com/") PNG Crush
            li
              a(href="http://jpgoptimiser.com/") JPG Optimiser

      #ads.row
        .col-md-4
          h1 Minify your JavaScript
          p= pkg.description
        #ads.col-md-8.c
          a(href=ad.url)
            img(width="728",height="90",src=ad.src,title=ad.title,alt=ad.title)

      .row
        .col-md-4
          .row
            .col-md-4
              a.twitter-share-button(href="https://twitter.com/share",data-url="http://javascript-minifier.com/",data-text=pkg.description,data-via="andychilton") Tweet
              script.
                !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
            .col-md-4
              #fb-root
              .fb-like(style="font-size:1px;display:inline-block;",data-href="http://javascript-minifier.com/",data-layout="button_count",data-action="like",data-show-faces="false",data-share="false")
              script.
                (function(d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id; js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.0";
                fjs.parentNode.insertBefore(js, fjs); }(document, 'script', 'facebook-jssdk'));
            .col-md-4
              .g-plusone(style="font-size:1px;display:inline-block;",data-size="medium",data-href="http://javascript-minifier.com/")

        .col-md-8.c
          p
            | #{ad.text1}
            a(href=ad.url)= ad.title
            | #{ad.text2}

      block content

